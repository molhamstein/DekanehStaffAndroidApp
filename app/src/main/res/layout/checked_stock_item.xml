<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product name"
            android:includeFontPadding="false"
            style="@style/BrownBoldTextView"
            android:textColor="@color/gray_text_color"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/manufacture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BrownRegularTextView"

            android:text="Manufacture"
            android:textColor="@color/light_gray_text_color"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productName" />

        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:text="450"
            android:includeFontPadding="false"
            style="@style/BrownBoldTextView"
            android:textColor="@color/gray_text_color"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/checkIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/checkIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/check_selector"
            android:button="@null"
            android:checked="false"
            android:clickable="false"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/pieces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/manufacture"
            app:layout_constraintTop_toBottomOf="@+id/manufacture">

            <TextView
                android:id="@+id/piecesNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                style="@style/BrownRegularTextView"
                android:layout_gravity="center"
                android:textColor="@color/light_gray_text_color"
                android:textSize="16sp" />



        </LinearLayout>


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>